        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- dialog上每个item中的文字 -->
    <style name="dialog_tv_item" parent="@style/font_size4">
        <item name="android:textColor">#000000</item>
    </style>

    <!-- dialog上item列表的上的提示文字 -->
    <style name="dialog_tv_prompt" parent="@style/font_size3">
        <item name="android:textColor">#3b9f2b</item>
