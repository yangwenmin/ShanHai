<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/id_ll_voice_listen"
        android:layout_width="148dp"
        android:layout_height="36dp"
        android:background="@drawable/duihuakuang"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/id_iv_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/voice_listen"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/id_tv_ting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="23dp"
            android:text="点击播放"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:background="@drawable/fenda_juxing"
            />
    </LinearLayout>

</LinearLayout>